<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.damien.devicerecord">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".homepage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".device"
            android:screenOrientation="portrait" />
        <activity
            android:name=".add_list"
            android:screenOrientation="portrait" />
        <activity
            android:name=".edit_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".device_details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".device_final_details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".edit_details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".manage_balance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".balance_history"
            android:screenOrientation="portrait" />
        <activity
            android:name=".balance_final_history"
            android:screenOrientation="portrait" />
        <activity
            android:name=".add_list_next"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".AlertReceiver"
            android:screenOrientation="portrait" />

        <activity
            android:name=".add_device"
            android:screenOrientation="portrait" />
        <activity android:name=".delete_device"></activity>
    </application>

</manifest>