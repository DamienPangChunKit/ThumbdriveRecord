<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thumbdriveDetails_table_layout"
    android:layout_width="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/thumbdrive_details_layout_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:id="@+id/tvthumbdriveDetailsID"
                    android:layout_width="60dp"
                    android:lines="2"
                    android:background="@drawable/rectangle_border"
                    android:padding="3dip"
                    android:text="ID"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvthumbdriveDetailsEmployeeName"
                    android:layout_width="0dp"
                    android:lines="2"
                    android:background="@drawable/rectangle_border"
                    android:padding="3dip"
                    android:text="Employee Name"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvthumbdriveDetailsDate"
                    android:layout_width="115dp"
                    android:lines="2"
                    android:background="@drawable/rectangle_border"
                    android:padding="3dip"
                    android:text="Borrow Date"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>